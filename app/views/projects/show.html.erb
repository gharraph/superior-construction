<div class="center hero-unit">
  <%= @project.name %>

  <% if @project.users.any? %>
      <h3>Users (<%= @project.users.count %>)</h3>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
  <% end %>

  <% if @project.materials.any? %>
      <h3>Materials needed:</h3>
      <ul class="materials">
        <%= render @materials %>
      </ul>
      <%= will_paginate @users %>
  <% end %>

</div>